<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:minHeight="36dp"
    android:maxHeight="100dp"
    android:layout_weight="1"
    android:background="@drawable/textshowview_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textshow_title"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="3dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:text="zaiganma "
        android:textSize="@dimen/header_button_text_size" />

    <View
        android:id="@+id/view1"
        android:layout_width="3dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="6dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/textshow_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/edit_text_size" />

    <Button
        android:layout_weight="1"
        android:id="@+id/scanner_button"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/buttton_style"
        android:text="@string/scanner_button_text"
        android:textSize="@dimen/header_button_text_size" />
</LinearLayout>