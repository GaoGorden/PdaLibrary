<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tb_tablename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textColor="@color/line"
            android:textSize="@dimen/edit_text_size" />

        <TextView
            android:id="@+id/tb_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/line"
            android:textSize="@dimen/edit_text_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/tb_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <p.gorden.pdalibrary.tableLayout.FreeScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <p.gorden.pdalibrary.tableLayout.TableLayout
                    android:id="@+id/tb_table"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    app:backgroundColorSelected="@color/line"
                    app:headerColor="@color/colorPrimary"
                    app:tableColumnPadding="10dp"
                    app:tableDividerColor="#ddd"
                    app:tableDividerSize="1dp"
                    app:tableRowHeight="@dimen/table_row_height"
                    app:tableTextColor="#333"
                    app:tableTextColorSelected="#fff"
                    app:tableTextGravity="leftCenter"
                    app:tableTextSize="18dp" />

            </p.gorden.pdalibrary.tableLayout.FreeScrollView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />


    <LinearLayout
        android:id="@+id/tb_buttongroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="第 "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/yema_text_size" />

                <TextView
                    android:id="@+id/tb_yema"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/yema_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text=" 页 "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/yema_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="共"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/yema_text_size" />

                <TextView
                    android:id="@+id/tb_yemasum"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/yema_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text=" 页"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/yema_text_size" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/line" />

        <Button
            android:id="@+id/tb_shangyiye"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="上一页"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/yema_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/line" />

        <Button
            android:id="@+id/tb_xiayiye"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="下一页"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/yema_text_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line" />

</LinearLayout>