<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:maxHeight="100dp">

    <LinearLayout
        android:id="@+id/sc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/scanner_button"
        android:layout_toLeftOf="@+id/scanner_button"
        android:background="@drawable/edittextview_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scanner_title"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textSize="@dimen/header_button_text_size"
            android:textStyle="bold"
            tools:text="编号" />

        <View
            android:id="@+id/view1"
            android:layout_width="3dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="6dp"
            android:background="#DCDCDC" />

        <AutoCompleteTextView
            android:id="@+id/scanner_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/edittextview_background"
            android:completionThreshold="0"
            android:dropDownWidth="wrap_content"
            android:dropDownHeight="wrap_content"
            android:dropDownSelector="#8C8A8A"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start|center_vertical"
            android:imeOptions="actionDone"
            android:minHeight="36dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textSize="@dimen/edit_text_size"
            tools:text="1234567891234567891234567891gagadgageag" />
    </LinearLayout>


    <Button
        android:id="@+id/scanner_button"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/buttton_style"
        android:text="@string/scanner_button_text"
        android:textSize="@dimen/header_button_text_size" />


</RelativeLayout>